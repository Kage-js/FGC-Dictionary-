<div class="box">
  <div class="text">
    <h1>Add Word!</h1>
    <%= form_for(@vocabulary) do |f| %>
    <p>
      <%= f.label :word %>
      <%= f.text_field :word %>
    </p>
    <p>
      <%= f.label :definition %>
      <%= f.text_field :definition %>
    </p>
    <%= f.submit "Submit Word" %>
    <% end %>
  </div>
</div>
